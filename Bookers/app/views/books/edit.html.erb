<body>
  <h1>Editing Book</h1>

 <%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <p>Title</p>
 <%= f.text_field :title %>

 <p>Body</p>
  <%= f.text_area :body %>

<div class="action">
 <%= f.submit 'Update Book' %>
 <% end %>
</div>


<div class="action">
 <%= link_to "Show",book_path(@book.id) %>
  "|"
 <%= link_to "Back",books_path %>
</div>

</body>

